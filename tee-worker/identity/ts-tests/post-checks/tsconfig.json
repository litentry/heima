{
    "compilerOptions": {
        "rootDir": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "paths": {},
    "ts-node": {
        "esm": true,
        "experimentalResolver": true,
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true
    }
}
