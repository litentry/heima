[Unit]
Description=Litentry Parachain

[Service]
Type=simple
User=USER
WorkingDirectory=/opt/litentry/parachain
ExecStart=/opt/litentry/parachain/heima-collator --base-path /opt/litentry/parachain/para-alice --alice --collator --force-authoring --chain CHAIN-dev --unsafe-rpc-external --rpc-cors=all --ws-max-connections 3000 --port 30333 --rpc-port 9944 --execution wasm --state-pruning archive --blocks-pruning archive -- --execution wasm --chain /opt/litentry/parachain/rococo-local-chain-spec.json --port 30332 --rpc-port 9943
Restart=always
RestartSec=120
StandardOutput=append:/opt/litentry/parachain/para.alice.log
StandardError=inherit

[Install]
WantedBy=multi-user.target
