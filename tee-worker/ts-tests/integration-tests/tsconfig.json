{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "ts-node": {
        "esm": true,
        "experimentalResolver": true,
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true
    }
}
