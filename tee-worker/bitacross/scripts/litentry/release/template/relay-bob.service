[Unit]
Description=Litentry Relaychain Bob

[Service]
Type=simple
User=USER
WorkingDirectory=/opt/litentry/parachain
ExecStart=/opt/litentry/parachain/polkadot --base-path /opt/litentry/parachain/relay-bob --chain /opt/litentry/parachain/rococo-local-chain-spec.json --bob --port 30337 --rpc-port 9947
Restart=always
RestartSec=120
StandardOutput=append:/opt/litentry/parachain/relay.bob.log
StandardError=inherit

[Install]
WantedBy=multi-user.target
